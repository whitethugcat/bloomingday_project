<body>
    
<div class="background">

<!--***헤더부분***-->

    <div class="header">
        <div class="my_page">
            <% if user_signed_in? %>
                <%= current_user.email %> 님 안녕하세요!
            <% else %>
                안녕하세요 :)
            <% end %>
        </div>
        <div class="logo">
            blooming day &#x1F337
        </div>
        <div class="page_name">
            buyer |
        </div>
        <!--메인페이지 링크 삭제-->
        <div class="login_logout">
            <% if user_signed_in? %>
                <a href="/users/sign_out" data-method="delete">로그아웃</a>
            <% else %>
                <a href="/users/sign_in">로그인</a>
            <% end %>
        </div>
    </div>
    <!--검색기능 추가-->
    <form action="/blooming_days/index" method="GET">
        <input type="text" name="query" vlaue="<%= params[:query]%>" placeholder="꽃 이름을 검색하세요">
        <button type="submit">검색<button>
    </form>

<!--***컨텐츠부분***-->

<div class="container">
<div class="content">
    
    
<% @sellers.each do |seller|%>
    <div class="card">
        <div class="store_name">
            <a href="/blooming_days/<%= seller.id %>/show"><%= seller.name %></a>
        </div>
        <div class="location">
            <%= seller.location %>
        </div>
        <div class="type">
            <%= seller.sort %>
        </div>
        <% if seller.img.attached? %>
        <img class="store_photo" src="<%= url_for(seller.img) %>">
        <% end %>
    </div>

<% end %>

<hr>
    <div class ="page_number">
    <%== pagy_nav(@pagy) %> <%== pagy_info(@pagy) %>
    </div>
<br>

</body>